{
  "name": "uniview-backend",
  "version": "1.0.0",
  "description": "Backend API for Project Uniview - Smart Parking Assistance",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:create-tables": "ts-node scripts/createTables.ts",
    "db:seed": "ts-node scripts/seedData.ts",
    "db:setup": "npm run db:create-tables && npm run db:seed",
    "dynamodb:start": "node scripts/start-dynamodb.js",
    "local:setup": "ts-node scripts/setup-local-db.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "dynamodb-local": "^0.0.36",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
